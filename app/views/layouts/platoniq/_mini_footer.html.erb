<div class="footer-transition"></div>
<div class="mini-footer">
  <div class="row">
    <div class="column">
      <div class="project-logos">
          <%= image_pack_tag("media/images/logo-platoniq.png", alt: "Platoniq Logo" ) %>
          <%= image_pack_tag("media/images/logo-esf.png", alt: "Platoniq Logo" ) %>
          <%= image_pack_tag("media/images/logo-bcn-activa.png", alt: "Barcelona activa Logo" ) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 large-6 column">
      <a rel="license" class="cc-badge"
         href="http://creativecommons.org/licenses/by-sa/4.0/"
         target="_blank" rel="noopener">
        <%= image_pack_tag("media/images/cc-badge.png", alt: "Creative Commons License" ) %>
      </a>
      <%= t("platoniq.layouts.footer.made_by_platoniq").html_safe %>
    </div>
    <div class="medium-6 large-4 column">
      <% if current_organization.official_img_footer? %>
        <div class="decidim-logo">
          <%= link_to current_organization.official_url do %>
            <% if current_organization.official_img_header.attached? %>
              <%= image_tag current_organization.attached_uploader(:official_img_header).path, class: "minimap-official_img_header" %>
            <% else %>
              <span class="float-right"><%= t("official_img_header", scope: "activemodel.attributes.organization") %> &gt; </span>
              <%= content_tag :div, nil, { class: "minimap-official_img_header placeholder float-right", style: "width: #{image_width(current_organization, :official_img_header) * size_factor }px; height: #{image_height(current_organization, :official_img_header) * size_factor }px;" } %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <div class="decidim-logo">
        <a rel="decidim"
           href="https://decidim.org/"
           target="_blank">
          <%= image_pack_tag("media/images/decidim-logo.svg", alt: "Decidim Logo" ) %>
        </a>
      </div>
    </div>
  </div>
</div>
